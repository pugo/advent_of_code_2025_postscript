/meassure_pairs  % array
{
   /input exch def
   /len input length def
   dl:init

   0 1 len 2 sub
   {
      /i exch def

      i 1 add 1 len 1 sub
      {
         /j exch def
         /a input i get def
         /b input j get def
         /d 
         a 0 get b 0 get sub dup mul
         a 1 get b 1 get sub dup mul add
         a 2 get b 2 get sub dup mul add def

         % i 10 string cvs print (, ) print j 10 string cvs print (, ) print d 20 string cvs println
         [d i j a b] dl:put
      } for
   } for

   % dl:list ==
} bind def


/connect_n    %% input n --    | Connect n shortest pairs.
{
   /cn exch def
   /input exch def
   input length c:init

   0 1 cn 1 sub
   {
      dl:list exch get c:put
   } for
} bind def


/connect_all    %%  --    | Connect all.
{
   /input exch def
   /cresult 0 def
   input length c:init

   /cindex 0 def
   {
      dl:list cindex get c:put
      c:components 1 eq
      {
         dl:list cindex get
         dup 3 get 0 get exch 4 get 0 get mul
         /cresult exch def

         exit
      } if
      /cindex cindex 1 add def
   } loop

   cresult
} bind def

