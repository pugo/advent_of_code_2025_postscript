%% ---- Utils ------

/min  %% int int -- int   | Return min of two ints
{
   2 copy gt { exch pop } { pop } ifelse
} bind def

/max  %% int int -- int   | Return max of two ints
{
   2 copy lt { exch pop } { pop } ifelse
} bind def

/append   %% array elem -- array with elem   | Append elem to array, returning a new array with result.
{
   1 index length dup 1 add array   % Create new larger array.
   dup 0 6 -1 roll putinterval      % Copy old array into new.
   dup 4 -2 roll                    % Duplicate array and stack roll.
   exch put                         % Put element to end.
} bind def


/lamps_to_int
{
   /p:lamps exch def
   /p:lampresult 0 def

   0 1 p:lamps length 1 sub
   {
      /p:i exch def
      p:lamps p:i get 35 eq   % '#' = 35
      {
         /p:lampresult p:lampresult 1 p:i bitshift or def
      } if
   } for

   p:lampresult
} bind def


/buttons_to_int_array
{
   /bia:lampcount exch def
   /bia:buttons exch def
   /bia:result [] def

   bia:buttons
   {
      /bia:button_value 0 def
      {
         1 exch bitshift
         /bia:button_value exch bia:button_value or def
      } forall
      /bia:result bia:result bia:button_value append def
   } forall

   bia:result
} bind def


/array_all_zero  % array -- bool  | Return true if all elements in array is 0.
{
  true exch
  {
    0 ne { pop false exit } if
  } forall
} bind def



%% --- Step 1 ----------
%% The solution idea is that the target lamp configuration as well as the button
%% presses can be seen as binary numbers. That reduces the problem to XOR of 
%% integers. Next idea is that no button can be pressed more than once for a
%% lowest result. Multiple presses of a button would just toggle the effect,
%% due to the XOR operation.

/s1:solve_problem
{
   aload pop 
   /sp:jolts exch def
   /sp:buttons exch def
   pop   % Skip buttons array
   /sp:lamps exch def
   /sp:buttons_count sp:buttons length def 
   /sp:result 10000 def

   % Loop 0 .. 2^buttons_count - 1
   0 1 1 sp:buttons_count bitshift 1 sub
   {  
      /sp:mask exch def
      /sp:val 0 def
      /sp:presscount 0 def

      0 1 sp:buttons_count 1 sub
      {
         /i exch def
         sp:mask 1 i bitshift and 0 ne
         {
            /sp:val sp:val sp:buttons i get xor def
            /sp:presscount sp:presscount 1 add def
         } if
      } for

      sp:val sp:lamps eq
      {
         /sp:result sp:result sp:presscount min def
      } if   
   } for

   sp:result 10000 eq { /sp:result 0 def } if
   sp:result
} bind def


/s1:solve_problems
{
   /s:result 0 def
   {
      s1:solve_problem
      /s:result exch s:result add def
   } forall

   s:result
} bind def


/s1:parse_indata
{
   /p:input exch def
   /p:result [] def

   p:input
   {
      aload pop
      /p:jolts exch def
      /p:buttons exch def
      /p:target exch def

      p:target lamps_to_int /p:target_int exch def
      p:buttons p:target length buttons_to_int_array /p:buttons_int_array exch def

      [p:target_int p:buttons p:buttons_int_array p:jolts]

      /p:result p:result 3 -1 roll append def
   } forall

   p:result
} bind def



%% --- Step 2 ----------

/p2:solve_lamp_config   %% int -  | Find solutions for given lamp config (int) and add to dict
{
   /p2:lamp_config exch def   % Lamp config to find
   /p2:config_results [] def

   % % Loop 0 .. 2^p2:buttons_len - 1 (All button combinations)
   0 1 1 p2:buttons_len bitshift 1 sub
   {  
      /mask exch def       % button mask this turn
      /val 0 def
      /presscount 0 def
      /presslist [] def

      /p2:joltsdelta jolts_len array def
      0 1 jolts_len 1 sub { p2:joltsdelta exch 0 put } for

      0 1 p2:buttons_len 1 sub
      {
         /i exch def
         mask 1 i bitshift and 0 ne
         {
            /presscount presscount 1 add def
            /val val p2:buttons i get xor def

            p2:buttons_array i get
            {
               dup
               p2:joltsdelta exch p2:joltsdelta 4 -1 roll get 1 add put
            } forall
            /presslist presslist i append def
         } if
      } for

      val p2:lamp_config eq
      {
         /p2:config_results p2:config_results [presscount p2:joltsdelta] append def
      } if
   } for

   p2:lamps_dict p2:lamp_config p2:config_results put
} bind def


/p2:lsb_bit_slice    %% joltage_array -- int  | get LSB bits from array as an int
{
   /p2:res 0 def
   dup 0 1 3 -1 roll length 1 sub
   {                       % input_jolts i
      2 copy               % input_jolts i input_jolts i
      get 1 and 1 eq
      { /p2:res p2:res 1 4 -1 roll bitshift or def }
      { pop } ifelse
   } for

   pop                     % input_jolts
   p2:res
} bind def


/p2:transform_joltages  %% jolts jolts_delta -- new_jolts  | Subtract delta from jolts and divide by 2.
{
   dup length /p2:transform_result exch array def

   dup length 0 1 3 -1 roll 1 sub
   { % jolts jolts_delta i
      dup 3 index exch get          % jolts jolts_delta i jolt
      2 index 2 index get           % jolts jolts_delta i jolt delta_val  
      sub 2 idiv                    % jolts jolts_delta i result
      p2:transform_result 3 -2 roll put
   } for

   pop pop
   p2:transform_result
} bind def 


/p2:iterate_jolt_bits   %% - int | Find the lowest number of presses for wanted jolts
{
   /max_jolt 0 def
   jolts { /max_jolt exch max_jolt max def } forall     % Get highest jolt
   /states [[0 jolts]] def
   /p2:scale 1 def

   {
      p2:scale max_jolt ge { exit } if
      /new_states [] def

      states
      {
         aload pop
         /state_joltages exch def
         /loop_presses exch def

         state_joltages p2:lsb_bit_slice   % Get LSB:s for jolts.
         p2:lamps_dict exch get

         {  % For all press variant in lamp setting
            aload pop
            /combo_delta exch def
            /combo_presses exch def
            /new_jolts state_joltages combo_delta p2:transform_joltages def

            /ok true def
            new_jolts {
               0 lt { /ok false def } if
            } forall

            ok {
               /new_states new_states
                  [loop_presses combo_presses p2:scale mul add
                   new_jolts] append def
            } if
         } forall
      } forall

      /states new_states def
      /p2:scale p2:scale 2 mul def
   } loop

   /p2:lowest 100000 def
   states
   {
      0 get p2:lowest min /p2:lowest exch def
   } forall

   p2:lowest
} bind def


/p2:solve_problem
{
   aload pop
   /jolts exch def                        % array of jolt numbers
   /jolts_len jolts length def            % int, number of jolt numbers
   /p2:buttons exch def                   % array of button ints
   /p2:buttons_array exch def             % array of button lamps
   /p2:lamps exch def                     % int representation of lamps
   /p2:buttons_len p2:buttons length def  % number of buttons
   /p2:lamps_dict 100000 dict def

   % Try to find solutions for 0 .. 2^jolts_len - 1 combinations. Stor in dict.
   0 1 1 jolts_len bitshift 1 sub
   {
      p2:solve_lamp_config
   } for

   p2:iterate_jolt_bits

   (Machine result: ) print dup 20 string cvs println
} bind def


/p2:solve_problems
{
   /p2:result 0 def
   {
      p2:solve_problem
      /p2:result exch p2:result add def
   } forall

   p2:result
} bind def

